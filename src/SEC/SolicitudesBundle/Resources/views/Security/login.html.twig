{% extends '::login.html.twig' %}


    {% block body %}



<div class="notice">
            {% if error %}
        <a href="" class="close">close</a>
        <p class="warn">{{ error.message }}</p>
                {% endif %} 
    </div>



    <!-- Primary Page Layout -->

    <div class="container">

        <div class="form-bg">

            <form action="{{ path('login_check') }}" method="post">
                <h2>Login</h2>

                <p><input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username"/></p>
                <p><input type="password" id="password" name="_password" placeholder="Password"/></p>

                <label for="remember">
                    <!-- 
                    <input type="checkbox" id="remember" value="remember" />
                    <span>Remember me on this computer</span>
                    -->
                </label>

                <button type="submit">login</button>

                <!-- <p class="forgot">Forgot your password? <a href="">Click here to reset it.</a></p> -->
            </form>






        </div>





    </div><!-- container -->

    <!-- JS  -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
    <script>window.jQuery || document.write("<script src='js/jquery-1.5.1.min.js'>\x3C/script>")</script>
    <script src="js/app.js"></script>

{% endblock %}
